# Canvas Scraper Enhanced v2.0 - Environment Configuration
# Copy this file to .env and update with your actual values

#==========================================
# Canvas API Configuration (Required)
#==========================================
CANVAS_API_TOKEN=your_canvas_api_token_here
CANVAS_URL=https://canvas.lms.unimelb.edu.au/api/v1

#==========================================
# Supabase Configuration (Optional but Recommended)
#==========================================
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_anon_key_here
SUPABASE_SERVICE_KEY=your_service_key_here

#==========================================
# Application Configuration
#==========================================
LOG_LEVEL=INFO
ENABLE_CRON=true
ENABLE_HEALTH_SERVER=true
PYTHONUNBUFFERED=1

#==========================================
# Processing Configuration
#==========================================
CONCURRENT_DOWNLOADS=3
MAX_FILE_SIZE_MB=50
CHUNK_SIZE=1000
CHUNK_OVERLAP=200

#==========================================
# Scheduling Configuration
#==========================================
CRON_SCHEDULE=0 2,14 * * *  # Run at 2 AM and 2 PM daily

#==========================================
# Optional: Database Configuration (Legacy)
#==========================================
POSTGRES_DB=canvas_scraper
POSTGRES_USER=canvas
POSTGRES_PASSWORD=secure_password_change_me

#==========================================
# Optional: Supabase Local Development
#==========================================
SUPABASE_DB_PASSWORD=supabase_password_change_me

#==========================================
# Optional: Monitoring Configuration
#==========================================
GRAFANA_PASSWORD=admin_change_me